{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "dom", "es5", "es6", "esnext"
        ],

        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,

        "outDir": "js",
        "baseUrl": "./",
        "paths": {
            //"~/*" : ["src/*"] // resolve any `~/foo/bar` to `<baseUrl>/src/foo/bar`
        }
    },
    "include": [
        "node_modules/@types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}
